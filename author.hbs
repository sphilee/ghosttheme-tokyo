{{!

	AUTHOR TEMPLATE
	- Configuration of this file is not required.

}}
{{!< default}}

	<div class="container">
		<div class="customcontainer">

		{{> sidebar_default}}

		<div class="content">

			{{! PAGE NOTIFICATION / TITLE }}
			<div class="notification">
				<div class="left"><i class="fa fa-user"></i>AUTHOR: <span>{{primary_author.name}}</span></div>
				<div class="right"><a href="{{@blog.url}}"><i class="fa fa-times"></i></a></div>
				<div class="notification-description"><p>{{primary_author.bio}}</p></div>
			</div>

			{{! WIDGET - BLOG INFO }}
			{{> widget_bloginfo}}

			{{> responsive_nav}}

			{{! POSTLIST }}
			<div class="postlist">
				{{> loop}}
				{{pagination}}
			</div>

		</div>
		</div>
	</div>
