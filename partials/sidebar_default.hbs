}}

    <div class="alternate">
        <aside>
            <div class="widget info_widget">
                {{#if @blog.logo}}
                    <a href="{{@blog.url}}" class="logo"><img src="{{@blog.logo}}" alt="{{@blog.title}}"></a>
                {{/if}}
                <p>{{@blog.description}}</p>
            </div>
            <div class="widget social_widget">
                {{> social_sidebar}}
            </div>
            {{> widget_tags}}
            <div class="widget twitter_widget">
              <iframe src="https://feed.mikle.com/widget/v2/78832/" height="865px" width="100%" class="fw-iframe" scrolling="no" frameborder="0"></iframe>            
              </div>
        </aside>
    </div>
