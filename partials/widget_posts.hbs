<div class="articles">
  <!--<h4><i class="fal fa-file-alt"></i> Related Posts</h4>-->
  {{#get "posts" limit="3" filter="id:-{{id}}+tag:{{primary_tag.slug}}"}}
    {{#foreach posts}}
      <div class="related-post">
        <a href="{{url}}"><h5 class="related-description-title">{{title}}<!--<i class="fal fa-arrow-circle-right"></i>--></h5></a>
        <span class="date"><i class="fal fa-calendar"></i> {{date published_at format="MMMM DD"}}</span>
        {{!--<p class="related-description">{{excerpt}}</p>--}}
        <div class="related-posttag">
          <i class="fal fa-tags"></i>
          {{#tags limit="1" }}<a href="{{url}}">{{name}}</a>{{/tags}}
        </div>
      </div>
    {{/foreach}}
  {{/get}}
</div>
