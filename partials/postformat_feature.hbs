{{!
    POST FORMAT - FEATURE
    - Configuration of this file is not required.
}}
<article class="postpreview">
  <a href="{{url}}" class="largeimage postfeature" {{#if feature_image}} style="background-image: url({{img_url feature_image}})" {{/if}}>
  </a>
  <h1>{{{title}}}</h1>
  <div class="excerpt">
    {{excerpt words="100"}}
  </div>
  <div class="post-preview-footer">
    <div class="left">
      <a href="{{url}}" class="date"><i class="fal fa-calendar-alt"></i>{{date format="MMMM Do"}}</a>
      <span class="tags">
        {{#foreach tags}}
          <a href="{{url}}"><i class="fal fa-tags"></i> {{name}}</a>
        {{/foreach}}
      </span>
    </div>
    <a href="{{url}}" class="readbtn">Read</a>
  </div>
</article>
